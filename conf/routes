# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Assets.at(path="/public/views", file="index.html")

# Cat RESTful API
GET     /cats                               controllers.Application.findAll()
POST	/cats								controllers.Application.createCat()

GET     /cats/:id                           controllers.Application.getCat(id: Long)
#PUT		/cats/:id							controllers.Application.update()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
